---
/**
 * PresentationLayout
 *
 * Full-screen presentation layout with:
 * - Navigation overlays (TOC, Appendix)
 * - Progress bar and slide counter
 * - Keyboard navigation hints
 * - D3.js for visualizations
 * - Optional narration player with captions
 *
 * @prop {string} title - Presentation title
 * @prop {string} [description] - Description for meta tags
 * @prop {number} [themeNumber] - DE Framework theme (1-6) for color override
 * @prop {number} [classNumber] - Class number for audio paths (enables narration)
 * @prop {object} [narration] - Narration data from content collection
 */

import '../styles/global.css';
import {
  institution,
  course,
  sessions,
  getPageTitle,
  generateCSSVariables,
  getThemeColor,
} from '../config';
import NarrationPlayer from '../components/presentation/NarrationPlayer.astro';

interface NarrationSlide {
  ssml: string;
  plainText: string;
  estimatedDuration: number | null;
  captions?: Array<{ start: number; end: number; text: string }>;
}

interface NarrationData {
  slides: Record<string, NarrationSlide>;
}

interface Props {
  title: string;
  description?: string;
  themeNumber?: number;
  classNumber?: number;
  narration?: NarrationData;
}

const {
  title,
  description = course.description,
  themeNumber,
  classNumber,
  narration,
} = Astro.props;

const hasNarration = classNumber !== undefined && narration !== undefined;

// Derive lesson plan URL from class number
const session = classNumber !== undefined ? sessions.find(s => s.number === classNumber) : undefined;
const lessonPlanSlug = session?.presentationPath
  ? session.presentationPath.replace('/class-', '').replace('/presentation', '')
  : undefined;
const hasLessonPlan = lessonPlanSlug !== undefined;

const pageTitle = getPageTitle(title);
const baseCssVariables = generateCSSVariables();

// Get base URL for asset paths (handles GitHub Pages subdirectory deployment)
// Ensure trailing slash for proper path concatenation
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;

// Override theme color if themeNumber is provided
const themeOverride = themeNumber
  ? `
    :root {
      --theme-color: ${getThemeColor(themeNumber)};
      --theme-color-light: ${getThemeColor(themeNumber)}cc;
    }
  `
  : '';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>

  <title>{pageTitle}</title>

  <!-- Preconnect to font origins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Georgia&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- D3.js for visualizations -->
  <script src="https://d3js.org/d3.v7.min.js" defer></script>

  <!-- Configure base URLs BEFORE loading presentation scripts -->
  <script define:vars={{ syllabusUrl: base, lessonPlanUrl: hasLessonPlan ? `${base}design/lessons/${lessonPlanSlug}` : null }}>
    window.__SYLLABUS_URL__ = syllabusUrl;
    window.__LESSON_PLAN_URL__ = lessonPlanUrl;
  </script>

  <!-- Presentation scripts (must come after URL configuration) -->
  <script is:inline src={`${base}shared/narration.js`}></script>
  <script is:inline src={`${base}shared/presentation.js`}></script>

  <!-- Lesson plan keyboard shortcut -->
  {hasLessonPlan && (
    <script is:inline>
      document.addEventListener('keydown', function(e) {
        if (e.key.toLowerCase() === 'l' && !e.ctrlKey && !e.metaKey && !e.altKey) {
          var overlays = document.querySelectorAll('.toc-overlay.active, .appendix-overlay.active');
          if (overlays.length === 0 && window.__LESSON_PLAN_URL__) {
            window.location.href = window.__LESSON_PLAN_URL__;
          }
        }
      });
    </script>
  )}

  <!-- Inject theme CSS variables from config -->
  <style set:html={`${baseCssVariables}${themeOverride}`}></style>
</head>
<body>
  <!-- Overlay Backdrop -->
  <div id="overlay-backdrop" class="overlay-backdrop"></div>

  <!-- TOC Overlay -->
  <div id="toc-overlay" class="toc-overlay">
    <button id="toc-close" class="toc-close" aria-label="Close table of contents">&times;</button>
    <div class="toc-header">
      <h3>Table of Contents</h3>
      <div class="class-info">{title}</div>
    </div>
    <div id="toc-content" class="toc-content">
      <!-- Auto-generated by presentation.js -->
    </div>
    <div class="toc-footer">
      <a href={base}>&larr; Back to Course Syllabus</a>
    </div>
  </div>

  <!-- Appendix Overlay -->
  <div id="appendix-overlay" class="appendix-overlay">
    <div class="appendix-header">
      <h3>Appendix</h3>
      <button id="appendix-close" class="appendix-close" aria-label="Close appendix">&times;</button>
    </div>
    <div id="appendix-content" class="appendix-content">
      <!-- Auto-generated from appendix slides -->
    </div>
    <div class="appendix-nav">
      <button id="appendix-prev" class="appendix-nav-btn" aria-label="Previous appendix slide">&larr; Prev</button>
      <span id="appendix-counter" class="appendix-counter">1 / 1</span>
      <button id="appendix-next" class="appendix-nav-btn" aria-label="Next appendix slide">Next &rarr;</button>
    </div>
  </div>

  <!-- Presentation Container -->
  <div class="presentation">
    <slot />
  </div>

  <!-- Progress Bar -->
  <div class="progress-container">
    <div class="progress-bar"></div>
  </div>

  <!-- Slide Counter -->
  <div class="slide-counter">
    <span class="current">1</span> / <span class="total">1</span>
  </div>

  <!-- Keyboard Hints -->
  <div class="keyboard-hints">
    <span><kbd>&larr;</kbd><kbd>&rarr;</kbd> Navigate</span>
    <span><kbd>T</kbd> Contents</span>
    <span><kbd>A</kbd> Appendix</span>
    <span><kbd>S</kbd> Syllabus</span>
    {hasLessonPlan && <span><kbd>L</kbd> Lesson Plan</span>}
    {hasNarration && <span><kbd>C</kbd> Captions</span>}
  </div>

  <!-- Narration Player (if enabled) -->
  {hasNarration && (
    <NarrationPlayer classNumber={classNumber!} narration={narration!} />
  )}
</body>
</html>
