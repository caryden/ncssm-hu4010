---
/**
 * MainLayout
 *
 * Base layout for non-presentation pages (homepage, syllabus).
 * Includes Google Fonts, global styles, and basic page structure.
 *
 * @prop {string} title - Page title (will be combined with site config)
 * @prop {string} [description] - Page description for meta tags
 */

import '../styles/global.css';
import { institution, course, getPageTitle, generateCSSVariables } from '../config';

interface Props {
  title?: string;
  description?: string;
}

const {
  title,
  description = course.description,
} = Astro.props;

const pageTitle = title || getPageTitle();
const cssVariables = generateCSSVariables();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>

  <title>{pageTitle}</title>

  <!-- Preconnect to font origins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Georgia&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Inject theme CSS variables from config -->
  <style set:html={`${cssVariables}`}></style>
</head>
<body>
  <slot />
</body>
</html>
