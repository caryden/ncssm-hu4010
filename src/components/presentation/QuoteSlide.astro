---
/**
 * QuoteSlide Component
 *
 * Centered slide for displaying attributed quotes.
 * Features large quotation mark and styled attribution.
 *
 * @example
 * <QuoteSlide id="7" title="Expert Insight" attribution="â€” Bill Aulet, MIT">
 *   Entrepreneurship can be taught. It can be learned.
 * </QuoteSlide>
 */

import type { QuoteSlideProps } from './types';
import Slide from './Slide.astro';

interface Props extends QuoteSlideProps {}

const {
  id,
  title,
  attribution,
  section,
  class: className,
} = Astro.props;
---

<Slide id={id} type="quote" title={title} section={section} class={className}>
  <div class="slide-content">
    <blockquote>
      <slot />
    </blockquote>
    {attribution && <p class="attribution">{attribution}</p>}
  </div>
</Slide>

<style>
  blockquote {
    font-size: 2rem;
    font-style: italic;
    line-height: 1.5;
    max-width: 900px;
    margin: 0 auto 30px;
    position: relative;
    padding: 0 60px;
    border-left: none;
  }

  blockquote::before {
    content: '"';
    position: absolute;
    left: 0;
    top: -20px;
    font-size: 5rem;
    color: var(--theme-color);
    font-family: 'Montserrat', sans-serif;
  }

  .attribution {
    font-size: 1.3rem;
    color: var(--brand-accent);
    font-weight: 500;
    text-align: right;
    max-width: 900px;
    margin: 0 auto;
  }
</style>
