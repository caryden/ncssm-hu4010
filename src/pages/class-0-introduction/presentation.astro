    <script is:inline>
        // Custom visualizations for this presentation

        // Draw DE Wheel when slide 10 is active
        function drawDEWheel() {
            const viz = window.Visualization.create('de-wheel', { padding: 0.05 });
            if (!viz) return;

            const { svg, bounds } = viz;

            // Use smaller dimension for circular wheel
            const maxRadius = Math.min(bounds.width, bounds.height) / 2;
            const center = { x: bounds.centerX, y: bounds.centerY };

            // Proportional calculations
            const radius = maxRadius * 0.75;
            const innerRadius = radius * 0.6;
            const labelOffset = maxRadius * 0.12;

            const themes = [
                { name: 'Customer', color: '#356093', steps: 5 },
                { name: 'Value', color: '#7c3aed', steps: 6 },
                { name: 'Acquire', color: '#059669', steps: 2 },
                { name: 'Money', color: '#d4a028', steps: 6 },
                { name: 'Build', color: '#ef4444', steps: 4 },
                { name: 'Scale', color: '#06b6d4', steps: 1 }
            ];

            const arcGenerator = d3.arc()
                .innerRadius(innerRadius)
                .outerRadius(radius);

            const pie = d3.pie()
                .value(d => d.steps)
                .sort(null);

            const arcs = pie(themes);

            arcs.forEach((arc, i) => {
                svg.append('path')
                    .attr('d', arcGenerator(arc))
                    .attr('transform', `translate(${center.x}, ${center.y})`)
                    .attr('fill', themes[i].color)
                    .attr('opacity', 0)
                    .transition()
                    .delay(i * 150)
                    .duration(500)
                    .attr('opacity', 1);

                const midAngle = (arc.startAngle + arc.endAngle) / 2;
                const labelRadius = radius + labelOffset;
                const x = center.x + Math.cos(midAngle - Math.PI/2) * labelRadius;
                const y = center.y + Math.sin(midAngle - Math.PI/2) * labelRadius;

                svg.append('text')
                    .attr('x', x)
                    .attr('y', y)
                    .attr('text-anchor', 'middle')
                    .attr('fill', themes[i].color)
                    .attr('font-family', 'Montserrat')
                    .attr('font-size', '1.25rem')
                    .attr('font-weight', '600')
                    .attr('opacity', 0)
                    .text(themes[i].name)
                    .transition()
                    .delay(i * 150 + 300)
                    .duration(400)
                    .attr('opacity', 1);
            });

            // Center text - "24" and "STEPS"
            svg.append('text')
                .attr('x', center.x)
                .attr('y', center.y - maxRadius * 0.05)
                .attr('text-anchor', 'middle')
                .attr('fill', '#f1f1f1')
                .attr('font-family', 'Montserrat')
                .attr('font-size', '3rem')
                .attr('font-weight', '700')
                .text('24');

            svg.append('text')
                .attr('x', center.x)
                .attr('y', center.y + maxRadius * 0.1)
                .attr('text-anchor', 'middle')
                .attr('fill', '#a0a0a0')
                .attr('font-family', 'Montserrat')
                .attr('font-size', '1.25rem')
                .text('STEPS');
        }

        // Custom slide animations
        const originalGoToSlide = window.Presentation.goToSlide;
        window.Presentation.goToSlide = function(n) {
            originalGoToSlide(n);

            const slide = document.querySelector(`[data-slide="${n}"]`);
            if (!slide) return;

            // Animate myth cards
            const mythCards = slide.querySelectorAll('.myth-card');
            mythCards.forEach((card, i) => {
                card.classList.remove('visible');
                setTimeout(() => card.classList.add('visible'), 200 * (i + 1));
            });

            // Animate question cards
            const questionCards = slide.querySelectorAll('.question-card');
            questionCards.forEach((card, i) => {
                card.classList.remove('visible');
                setTimeout(() => card.classList.add('visible'), 150 * (i + 1));
            });

            // Animate timeline items
            const timelineItems = slide.querySelectorAll('.timeline-item');
            timelineItems.forEach((item, i) => {
                item.classList.remove('visible');
                setTimeout(() => item.classList.add('visible'), 200 * (i + 1));
            });

            // Animate dual cards
            const dualCards = slide.querySelectorAll('.dual-card');
            dualCards.forEach((card, i) => {
                card.classList.remove('visible');
                setTimeout(() => card.classList.add('visible'), 300 * (i + 1));
            });

            // Animate homework items
            const homeworkItems = slide.querySelectorAll('.homework-item');
            homeworkItems.forEach((item, i) => {
                item.classList.remove('visible');
                setTimeout(() => item.classList.add('visible'), 200 * (i + 1));
            });

            // Draw DE wheel on slide 10
            if (n === 10) {
                setTimeout(drawDEWheel, 300);
            }
        };
    </script>
