    <Slide title="About Bill Aulet" appendix={true}>
        <div class="slide-content">
            <h2>About Bill Aulet</h2>
            <p style="color: var(--text-secondary); font-size: 1.2rem; max-width: 700px; margin: 20px auto; line-height: 1.8;">
