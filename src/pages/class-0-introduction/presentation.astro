---
/**
 * Class 0: Course Introduction
 * Theme 1 (Blue) - Introduction to DE Framework
 */
import PresentationLayout from '../../layouts/PresentationLayout.astro';
import TitleSlide from '../../components/presentation/TitleSlide.astro';
import StatementSlide from '../../components/presentation/StatementSlide.astro';
import TwoPartSlide from '../../components/presentation/TwoPartSlide.astro';
import StandardSlide from '../../components/presentation/StandardSlide.astro';
import Slide from '../../components/presentation/Slide.astro';
import { course, institution } from '../../config';

// Load narration data for captions
import narrationData from '../../content/classes/0-introduction/narration.json';

// Get base URL for asset paths
const base = import.meta.env.BASE_URL;
---

<PresentationLayout
  title="Class 0: Course Introduction"
  themeNumber={1}
  classNumber={0}
  narration={narrationData}
>
    <style>
        /* Course-specific styles */
        .course-info {
            font-size: 1.1rem;
            color: var(--text-muted);
            margin-top: 30px;
        }

        /* Myth cards */
        .myth-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
            max-width: 900px;
            margin: 40px auto;
        }

        .myth-card {
            background: var(--dark-surface);
            border: 1px solid var(--dark-border);
            border-radius: 16px;
            padding: 30px;
            text-align: left;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease;
        }

        .myth-card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .myth-card .myth-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--danger-red);
            margin-bottom: 10px;
        }

        .myth-card .myth-text {
            font-size: 1.2rem;
            color: var(--text-secondary);
            text-decoration: line-through;
            margin-bottom: 20px;
        }

        .myth-card .reality-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--success-green);
            margin-bottom: 10px;
        }

        .myth-card .reality-text {
            font-size: 1.2rem;
            color: var(--text-primary);
            font-weight: 600;
        }

        /* Framework wheel container - height controlled by flex in shared styles */
        #de-wheel {
            width: 100%;
        }

        /* Questions grid */
        .questions-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            max-width: 1000px;
            margin: 40px auto;
        }

        .question-card {
            background: var(--dark-surface);
            border-radius: 16px;
            padding: 25px;
            text-align: center;
            opacity: 0;
            transform: scale(0.9);
            transition: all 0.5s ease;
        }

        .question-card.visible {
            opacity: 1;
            transform: scale(1);
        }

        .question-card .number {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .question-card .text {
            font-size: 1rem;
            color: var(--text-secondary);
        }

        /* Theme colors for question cards */
        .question-card[data-theme="1"] { border-left: 4px solid var(--theme-1-blue); }
        .question-card[data-theme="1"] .number { color: var(--theme-1-blue); }
        .question-card[data-theme="2"] { border-left: 4px solid var(--theme-2-purple); }
        .question-card[data-theme="2"] .number { color: var(--theme-2-purple); }
        .question-card[data-theme="3"] { border-left: 4px solid var(--theme-3-green); }
        .question-card[data-theme="3"] .number { color: var(--theme-3-green); }
        .question-card[data-theme="4"] { border-left: 4px solid var(--theme-4-amber); }
        .question-card[data-theme="4"] .number { color: var(--theme-4-amber); }
        .question-card[data-theme="5"] { border-left: 4px solid var(--theme-5-red); }
        .question-card[data-theme="5"] .number { color: var(--theme-5-red); }
        .question-card[data-theme="6"] { border-left: 4px solid var(--theme-6-cyan); }
        .question-card[data-theme="6"] .number { color: var(--theme-6-cyan); }

        /* Timeline */
        .timeline {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            max-width: 1000px;
            margin: 50px auto;
            position: relative;
        }

        .timeline::before {
            content: '';
            position: absolute;
            top: 25px;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--dark-border);
        }

        .timeline-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
            position: relative;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease;
        }

        .timeline-item.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .timeline-dot {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--theme-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 15px;
            position: relative;
            z-index: 1;
        }

        .timeline-label {
            font-size: 0.9rem;
            color: var(--text-muted);
            text-align: center;
        }

        .timeline-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--text-primary);
            text-align: center;
            margin-top: 5px;
        }

        /* Homework list */
        .homework-list {
            max-width: 700px;
            margin: 30px auto;
        }

        .homework-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 25px;
            padding: 20px;
            background: var(--dark-surface);
            border-radius: 12px;
            opacity: 0;
            transform: translateX(-20px);
            transition: all 0.5s ease;
        }

        .homework-item.visible {
            opacity: 1;
            transform: translateX(0);
        }

        .homework-icon {
            font-size: 1.5rem;
        }

        .homework-text {
            font-size: 1.1rem;
            color: var(--text-secondary);
        }

        /* Quote slide */
        .quote-text {
            font-family: 'Georgia', serif;
            font-size: 2.2rem;
            font-style: italic;
            line-height: 1.5;
            max-width: 900px;
            margin: 0 auto;
            color: var(--text-secondary);
        }

        .quote-attribution {
            margin-top: 30px;
            font-size: 1.2rem;
            color: var(--theme-color);
        }

        /* Dual nature cards */
        .dual-cards {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            max-width: 800px;
            margin: 40px auto;
        }

        .dual-card {
            background: var(--dark-surface);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.5s ease;
        }

        .dual-card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .dual-card .icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .dual-card h3 {
            font-size: 1.5rem;
            color: var(--text-primary);
            margin-bottom: 10px;
        }

        .dual-card p {
            color: var(--text-secondary);
        }
    </style>

    <!-- Slide 1: Title -->
    <TitleSlide
        id="1"
        section="Opening"
        title={course.name}
        subtitle="Based on Bill Aulet's Disciplined Entrepreneurship"
        info={`${institution.shortName} ${course.semester} | ${course.instructors.map(i => i.name).join(' & ')}`}
    />

    <!-- Slide 2: The Question -->
    <StatementSlide id="2" section="Opening" title="Can It Be Taught?">
        What if entrepreneurship could be taught?
    </StatementSlide>

    <!-- Slide 3: The Answer -->
    <StatementSlide id="3" title="Yes, It Can">
        <span style="color: var(--theme-color); font-size: 5rem; display: block; margin-bottom: 0.5em;">It can.</span>
        <span class="subtext">And that's exactly what we're going to do.</span>
    </StatementSlide>

    <!-- Slide 4: Tonight's Agenda -->
    <StandardSlide id="4" title="Tonight's Agenda">
        <ul class="content-list">
            <li>Bust some myths about entrepreneurship</li>
            <li>Introduce the Disciplined Entrepreneurship framework</li>
            <li>Preview the semester and what you'll build</li>
            <li>Form teams and get started</li>
        </ul>
    </StandardSlide>

    <!-- Slide 5: Myth Busting Divider -->
    <StatementSlide id="5" section="Myths vs Reality" title="Myth Busting">
        <span class="section-label" style="display: block; font-size: 1.2rem; text-transform: uppercase; letter-spacing: 2px; color: var(--text-muted); margin-bottom: 15px;">Let's Start With</span>
        Myth Busting
    </StatementSlide>

    <!-- Slide 6: Myth Grid -->
    <StandardSlide id="6" title="What Most People Get Wrong" type="visual">
        <div class="myth-grid">
            <div class="myth-card">
                <div class="myth-label">Myth</div>
                <div class="myth-text">"Entrepreneurs are born, not made"</div>
                <div class="reality-label">Reality</div>
                <div class="reality-text">It's a skill you can learn and practice</div>
            </div>
            <div class="myth-card">
                <div class="myth-label">Myth</div>
                <div class="myth-text">"You need a brilliant idea"</div>
                <div class="reality-label">Reality</div>
                <div class="reality-text">Execution matters more than ideas</div>
            </div>
            <div class="myth-card">
                <div class="myth-label">Myth</div>
                <div class="myth-text">"It's all about the solo genius"</div>
                <div class="reality-label">Reality</div>
                <div class="reality-text">Teams consistently outperform individuals</div>
            </div>
            <div class="myth-card">
                <div class="myth-label">Myth</div>
                <div class="myth-text">"Entrepreneurs are risk-takers"</div>
                <div class="reality-label">Reality</div>
                <div class="reality-text">Great entrepreneurs reduce risk systematically</div>
            </div>
        </div>
    </StandardSlide>

    <!-- Slide 7: The Evidence -->
    <StatementSlide id="7" title="The Evidence">
        The more times you do it, the better you get.
        <span class="subtext" style="display: block; font-size: 1.5rem; color: var(--text-secondary); margin-top: 20px; font-weight: 400;">Just like any other craft.</span>
    </StatementSlide>

    <!-- Slide 8: Framework Section -->
    <StatementSlide id="8" section="The Framework" title="Disciplined Entrepreneurship">
        <span class="section-label" style="display: block; font-size: 1.2rem; text-transform: uppercase; letter-spacing: 2px; color: var(--text-muted); margin-bottom: 15px;">Introducing</span>
        Disciplined Entrepreneurship
        <span class="subtext" style="display: block; font-size: 1.5rem; color: var(--text-secondary); margin-top: 20px; font-weight: 400;">24 Steps to a Successful Startup</span>
