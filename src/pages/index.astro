---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Applications in Entrepreneurship | NCSSM Spring 2026">
    <script>
        // Keyboard shortcuts: 0-9 to navigate to class presentations
        document.addEventListener('keydown', (e) => {
            const key = e.key;
            if (key >= '0' && key <= '9') {
                const classNum = parseInt(key);
                const urls = {
                    0: '/class-0-introduction/presentation',
                    1: '/class-1-market-segmentation/presentation',
                    2: '/class-2-customer-persona/presentation',
                    3: '/class-3-value-proposition/presentation',
                    4: '/class-4-competitive-positioning/presentation',
                    5: '/class-5-customer-acquisition/presentation',
                    6: '/class-6-business-model/presentation',
                    7: '/class-7-unit-economics/presentation',
                    8: '/class-8-testing-mvbp/presentation',
                    9: '/class-9-scale-pitch/presentation'
                };
                if (urls[classNum]) {
                    window.location.href = urls[classNum];
                }
            }
        });
    </script>
    <header class="header">
        <div class="header-content">
            <div class="ncssm-badge">NCSSM Spring 2026</div>
            <h1>Applications in Entrepreneurship</h1>
            <p class="subtitle">A systematic approach to building innovation-driven ventures</p>
            <div class="header-meta">
                <span><span class="icon">&#128100;</span> Carl Ryden & Chad Keister</span>
                <span><span class="icon">&#128197;</span> Monday Evenings, 6:15 - 7:55 PM</span>
                <span><span class="icon">&#128205;</span> Durham & Morganton</span>
            </div>
        </div>
    </header>

    <main class="main">
        <!-- Course Schedule -->
        <section class="schedule">
            <div class="section-header">
                <h2>Course Schedule</h2>
                <p>10 sessions covering Bill Aulet's Disciplined Entrepreneurship framework</p>
            </div>

            <div class="schedule-grid">
                <!-- Class 0 -->
                <a href="/class-0-introduction/presentation" class="schedule-item has-presentation theme-intro">
                    <div class="schedule-date">
                        <div class="day">Feb 2</div>
                    </div>
                    <div class="schedule-number">0</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Course Introduction & Team Formation</div>
                        <div class="schedule-steps">Framework overview, myths vs reality, team formation</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 1 -->
                <a href="/class-1-market-segmentation/presentation" class="schedule-item has-presentation theme-1">
                    <div class="schedule-date">
                        <div class="day">Feb 9</div>
                    </div>
                    <div class="schedule-number">1</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Market Segmentation & Beachhead Selection</div>
                        <div class="schedule-steps">DE Steps 1-2 | Theme 1: Who is your customer?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 2 -->
                <a href="/class-2-customer-persona/presentation" class="schedule-item has-presentation theme-2">
                    <div class="schedule-date">
                        <div class="day">Feb 16</div>
                    </div>
                    <div class="schedule-number">2</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Customer Persona & TAM</div>
                        <div class="schedule-steps">DE Steps 3-5 | Theme 1: Who is your customer?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 3 -->
                <a href="/class-3-value-proposition/presentation" class="schedule-item has-presentation theme-2">
                    <div class="schedule-date">
                        <div class="day">Feb 23</div>
                    </div>
                    <div class="schedule-number">3</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Value Proposition & Customer Journey</div>
                        <div class="schedule-steps">DE Steps 6-8 | Theme 2: What can you do for them?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 4 -->
                <a href="/class-4-competitive-positioning/presentation" class="schedule-item has-presentation theme-2">
                    <div class="schedule-date">
                        <div class="day">Mar 2</div>
                    </div>
                    <div class="schedule-number">4</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Competitive Positioning & Core</div>
                        <div class="schedule-steps">DE Steps 9-11 | Theme 2: What can you do for them?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 5 -->
                <a href="/class-5-customer-acquisition/presentation" class="schedule-item has-presentation theme-3">
                    <div class="schedule-date">
                        <div class="day">Mar 9</div>
                    </div>
                    <div class="schedule-number">5</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Customer Acquisition & DMU</div>
                        <div class="schedule-steps">DE Steps 12-13 | Theme 3: How do they acquire?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 6 -->
                <a href="/class-6-business-model/presentation" class="schedule-item has-presentation theme-4">
                    <div class="schedule-date">
                        <div class="day">Mar 16</div>
                    </div>
                    <div class="schedule-number">6</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Business Model & Pricing</div>
                        <div class="schedule-steps">DE Steps 14-16 | Theme 4: How make money?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 7 -->
                <a href="/class-7-unit-economics/presentation" class="schedule-item has-presentation theme-4">
                    <div class="schedule-date">
                        <div class="day">Mar 23</div>
                    </div>
                    <div class="schedule-number">7</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Unit Economics: LTV & COCA</div>
                        <div class="schedule-steps">DE Steps 17-19 | Theme 4: How make money?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Spring Break -->
                <div class="schedule-item break">
                    <div class="schedule-date">
                        <div class="day">Mar 30</div>
                    </div>
                    <div class="schedule-number" style="background: transparent; color: var(--text-muted);">-</div>
                    <div class="schedule-content">
                        <div class="schedule-title" style="color: var(--text-muted);">Spring Break</div>
                        <div class="schedule-steps">No class</div>
                    </div>
                </div>

                <div class="schedule-item break">
                    <div class="schedule-date">
                        <div class="day">Apr 6</div>
                    </div>
                    <div class="schedule-number" style="background: transparent; color: var(--text-muted);">-</div>
                    <div class="schedule-content">
                        <div class="schedule-title" style="color: var(--text-muted);">Spring Break</div>
                        <div class="schedule-steps">No class</div>
                    </div>
                </div>

                <!-- Class 8 -->
                <a href="/class-8-testing-mvbp/presentation" class="schedule-item has-presentation theme-5">
                    <div class="schedule-date">
                        <div class="day">Apr 13</div>
                    </div>
                    <div class="schedule-number">8</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Testing Assumptions & MVBP</div>
                        <div class="schedule-steps">DE Steps 20-23 | Theme 5: How design & build?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Class 9 -->
                <a href="/class-9-scale-pitch/presentation" class="schedule-item has-presentation theme-6">
                    <div class="schedule-date">
                        <div class="day">Apr 20</div>
                    </div>
                    <div class="schedule-number">9</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Scale & Pitch Preparation</div>
                        <div class="schedule-steps">DE Step 24 | Theme 6: How do you scale?</div>
                    </div>
                    <div class="schedule-action">
                        View Presentation <span class="arrow-icon">&#8594;</span>
                    </div>
                </a>

                <!-- Guest Speaker -->
                <div class="schedule-item break">
                    <div class="schedule-date">
                        <div class="day">Apr 27</div>
                    </div>
                    <div class="schedule-number" style="background: transparent; color: var(--text-muted);">-</div>
                    <div class="schedule-content">
                        <div class="schedule-title" style="color: var(--text-muted);">Guest Speaker / Workshop</div>
                        <div class="schedule-steps">TBD</div>
                    </div>
                </div>

                <!-- Final Pitches A -->
                <div class="schedule-item theme-final">
                    <div class="schedule-date">
                        <div class="day">May 4</div>
                    </div>
                    <div class="schedule-number">&#127942;</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Final Pitches - Group A</div>
                        <div class="schedule-steps">8-minute presentations + Q&A with judges</div>
                    </div>
                </div>

                <!-- Final Pitches B -->
                <div class="schedule-item theme-final">
                    <div class="schedule-date">
                        <div class="day">May 11</div>
                    </div>
                    <div class="schedule-number">&#127942;</div>
                    <div class="schedule-content">
                        <div class="schedule-title">Final Pitches - Group B</div>
                        <div class="schedule-steps">8-minute presentations + Q&A with judges</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Course Overview -->
        <section class="overview">
            <div class="section-header">
                <h2>Course Overview</h2>
                <p>Based on Bill Aulet's Disciplined Entrepreneurship framework from MIT</p>
            </div>

            <div class="overview-grid">
                <div class="overview-card">
                    <h3>Customer First</h3>
                    <p>Every venture starts with understanding a real customer problem. We design from the customer backward, not from the product forward.</p>
                </div>
                <div class="overview-card">
                    <h3>Team Sport</h3>
                    <p>Research shows teams outperform individuals. You'll work in teams of ~6 students, learning to collaborate effectively on a shared venture.</p>
                </div>
                <div class="overview-card">
                    <h3>Learn by Doing</h3>
                    <p>Mens et Manus (Mind and Hand). Every concept is immediately applied to your venture through workshops and weekly deliverables.</p>
                </div>
            </div>
        </section>

        <!-- Framework -->
        <section class="framework">
            <div class="section-header">
                <h2>The 24-Step Framework</h2>
                <p>Six fundamental questions every entrepreneur must answer</p>
            </div>

            <div class="framework-grid">
                <div class="framework-card t1">
                    <div class="framework-number">1</div>
                    <div class="framework-content">
                        <h4>Who Is Your Customer?</h4>
                        <p>Steps 1-5: Market segmentation, beachhead selection, persona</p>
                    </div>
                </div>
                <div class="framework-card t2">
                    <div class="framework-number">2</div>
                    <div class="framework-content">
                        <h4>What Can You Do For Them?</h4>
                        <p>Steps 6-11: Value proposition, core, competitive position</p>
                    </div>
                </div>
                <div class="framework-card t3">
                    <div class="framework-number">3</div>
                    <div class="framework-content">
                        <h4>How Do They Acquire Your Product?</h4>
                        <p>Steps 12-13: Decision-making unit, acquisition process</p>
                    </div>
                </div>
                <div class="framework-card t4">
                    <div class="framework-number">4</div>
                    <div class="framework-content">
                        <h4>How Do You Make Money?</h4>
                        <p>Steps 14-19: Business model, pricing, unit economics</p>
                    </div>
                </div>
                <div class="framework-card t5">
                    <div class="framework-number">5</div>
                    <div class="framework-content">
                        <h4>How Do You Design & Build?</h4>
                        <p>Steps 20-23: Test assumptions, define MVBP, validate</p>
                    </div>
                </div>
                <div class="framework-card t6">
                    <div class="framework-number">6</div>
                    <div class="framework-content">
                        <h4>How Do You Scale?</h4>
                        <p>Step 24: Product plan, expansion strategy</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <p class="footer-quote">"Entrepreneurship can be taught. It can be learned. And the first step is understanding that it's a process, not a personality trait."</p>
        <p class="footer-attribution">â€” Bill Aulet, MIT</p>
        <p style="margin-top: 30px; color: var(--text-muted); font-size: 0.85rem;">
            <kbd style="padding: 2px 8px; background: var(--dark-surface); border: 1px solid var(--dark-border); border-radius: 4px; font-family: inherit;">0</kbd>-<kbd style="padding: 2px 8px; background: var(--dark-surface); border: 1px solid var(--dark-border); border-radius: 4px; font-family: inherit;">9</kbd> Jump to class
        </p>
    </footer>
</MainLayout>

<style>
    /* Header */
    .header {
        background: linear-gradient(135deg, var(--dark-surface) 0%, var(--dark-bg) 100%);
        border-bottom: 1px solid var(--dark-border);
        padding: 60px 40px;
        text-align: center;
    }

    .header-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .ncssm-badge {
        display: inline-block;
        background: var(--ncssm-blue);
        color: white;
        padding: 8px 20px;
        border-radius: 30px;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 25px;
    }

    .header h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 15px;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .header .subtitle {
        font-size: 1.4rem;
        color: var(--text-secondary);
        margin-bottom: 30px;
    }

    .header-meta {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
        font-size: 0.95rem;
        color: var(--text-muted);
    }

    .header-meta span {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .header-meta .icon {
        color: var(--gold);
    }

    /* Main content */
    .main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 60px 40px;
    }

    /* Section headers */
    .section-header {
        margin-bottom: 40px;
    }

    .section-header h2 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 10px;
    }

    .section-header p {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    /* Course schedule grid */
    .schedule-grid {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .schedule-item {
        display: grid;
        grid-template-columns: 100px 60px 1fr auto;
        gap: 20px;
        align-items: center;
        padding: 24px 30px;
        background: var(--dark-card);
        border: 1px solid var(--dark-border);
        border-radius: 16px;
        transition: all 0.3s ease;
    }

    .schedule-item:hover {
        border-color: var(--ncssm-blue);
        transform: translateX(5px);
    }

    .schedule-item.has-presentation {
        cursor: pointer;
    }

    .schedule-item.has-presentation:hover {
        background: linear-gradient(135deg, var(--dark-card) 0%, rgba(53, 96, 147, 0.1) 100%);
    }

    .schedule-item.break {
        opacity: 0.5;
        background: transparent;
        border-style: dashed;
    }

    .schedule-item.break:hover {
        transform: none;
        border-color: var(--dark-border);
    }

    .schedule-date {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .schedule-date .day {
        font-weight: 600;
        color: var(--text-secondary);
    }

    .schedule-number {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .schedule-content {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .schedule-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .schedule-steps {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .schedule-action {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: transparent;
        border: 1px solid var(--dark-border);
        border-radius: 8px;
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .schedule-item.has-presentation:hover .schedule-action {
        background: var(--ncssm-blue);
        border-color: var(--ncssm-blue);
        color: white;
    }

    /* Theme colors for numbers */
    .theme-intro .schedule-number { background: rgba(53, 96, 147, 0.2); color: var(--theme-1-blue); }
    .theme-1 .schedule-number { background: rgba(53, 96, 147, 0.2); color: var(--theme-1-blue); }
    .theme-2 .schedule-number { background: rgba(124, 58, 237, 0.2); color: var(--theme-2-purple); }
    .theme-3 .schedule-number { background: rgba(5, 150, 105, 0.2); color: var(--theme-3-green); }
    .theme-4 .schedule-number { background: rgba(245, 158, 11, 0.2); color: var(--theme-4-amber); }
    .theme-5 .schedule-number { background: rgba(239, 68, 68, 0.2); color: var(--theme-5-red); }
    .theme-6 .schedule-number { background: rgba(6, 182, 212, 0.2); color: var(--theme-6-cyan); }
    .theme-final .schedule-number { background: rgba(212, 160, 40, 0.2); color: var(--gold); }

    /* Overview section */
    .overview {
        margin-top: 80px;
    }

    .overview-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
    }

    .overview-card {
        background: var(--dark-card);
        border: 1px solid var(--dark-border);
        border-radius: 16px;
        padding: 30px;
    }

    .overview-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--gold);
        margin-bottom: 15px;
    }

    .overview-card p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.7;
    }

    /* Framework section */
    .framework {
        margin-top: 80px;
    }

    .framework-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .framework-card {
        background: var(--dark-card);
        border: 1px solid var(--dark-border);
        border-radius: 16px;
        padding: 25px 30px;
        display: flex;
        align-items: flex-start;
        gap: 20px;
    }

    .framework-number {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .framework-content h4 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 6px;
    }

    .framework-content p {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .framework-card.t1 .framework-number { background: rgba(53, 96, 147, 0.2); color: var(--theme-1-blue); }
    .framework-card.t2 .framework-number { background: rgba(124, 58, 237, 0.2); color: var(--theme-2-purple); }
    .framework-card.t3 .framework-number { background: rgba(5, 150, 105, 0.2); color: var(--theme-3-green); }
    .framework-card.t4 .framework-number { background: rgba(245, 158, 11, 0.2); color: var(--theme-4-amber); }
    .framework-card.t5 .framework-number { background: rgba(239, 68, 68, 0.2); color: var(--theme-5-red); }
    .framework-card.t6 .framework-number { background: rgba(6, 182, 212, 0.2); color: var(--theme-6-cyan); }

    /* Footer */
    .footer {
        margin-top: 100px;
        padding: 40px;
        text-align: center;
        border-top: 1px solid var(--dark-border);
    }

    .footer-quote {
        font-family: 'Georgia', serif;
        font-style: italic;
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto 15px;
    }

    .footer-attribution {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .header h1 {
            font-size: 2.5rem;
        }

        .schedule-item {
            grid-template-columns: 80px 50px 1fr;
        }

        .schedule-action {
            display: none;
        }

        .overview-grid,
        .framework-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 600px) {
        .header {
            padding: 40px 20px;
        }

        .main {
            padding: 40px 20px;
        }

        .header-meta {
            flex-direction: column;
            gap: 15px;
        }

        .schedule-item {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .schedule-number {
            width: 36px;
            height: 36px;
        }
    }

    /* Link styles */
    a {
        text-decoration: none;
        color: inherit;
    }

    /* Arrow icon */
    .arrow-icon {
        transition: transform 0.3s ease;
    }

    .schedule-item.has-presentation:hover .arrow-icon {
        transform: translateX(4px);
    }
</style>
